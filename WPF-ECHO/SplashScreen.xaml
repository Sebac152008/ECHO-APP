<Window x:Class="WPF_ECHO.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ECHO" MinHeight="750" MinWidth="1180"
        WindowStartupLocation="CenterScreen"
        Background="#fff"
        Loaded="Window_Loaded">

    <Grid>
        <!-- SplashScreen -->

        <!-- Logo -->
        <Image x:Name="SplashImage" Width="550" Height="150" Source="/Imagenes/echoLogo.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- Contenido principal oculto al inicio -->
        <ContentControl x:Name="MainContent" Visibility="Collapsed" Opacity="0"/>
    </Grid>
</Window>
