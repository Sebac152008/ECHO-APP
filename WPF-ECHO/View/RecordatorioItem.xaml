<UserControl x:Class="ECHO.View.RecordatorioItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:ECHO.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Margin="10" Background="White" CornerRadius="10" Padding="15"
          BorderBrush="#2C3E50" BorderThickness="2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel>
                <TextBlock Text="{Binding Descripcion, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="18" FontWeight="Bold" Foreground="#2C3E50"/>
                <TextBlock Text="{Binding Fecha, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="16" Foreground="#2C3E50" Margin="0,5,0,0"/>
                <TextBlock Text="{Binding Hora, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="16" Foreground="#2C3E50"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top" Margin="10,0,0,0">
                <!-- Botón de Destacado -->
                <Button x:Name="btnDestacado" Margin="0,0,10,0" Width="35" Height="35"
            Background="Transparent" ToolTip="Marcar como destacado"
            Click="btnDestacado_Click">
                    <!-- Nombramos la imagen para poder cambiarla en code-behind -->
                    <Image x:Name="imgDestacado" Source="/Imagenes/EstrellaVaciaAmarilla.png" Width="25" />
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Cursor="Hand" BorderBrush="#26263B" BorderThickness="1.3"
                        Background="#fff" CornerRadius="40">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Botón de borrar -->
                <Button x:Name="btnBorrar" Width="35" Height="35" Background="Transparent"
            BorderThickness="0" ToolTip="Eliminar recordatorio"
            Click="btnBorrar_Click">
                    <fa:IconImage Icon="Trash" Foreground="#26263B" Width="20"/>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Cursor="Hand" BorderBrush="#26263B" BorderThickness="1.3"
                        Background="#fff" CornerRadius="40">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
