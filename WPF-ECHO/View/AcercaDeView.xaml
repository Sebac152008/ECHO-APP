<UserControl x:Class="WPF_ECHO.View.AcercaDeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_ECHO.View"
             mc:Ignorable="d" 
             d:DesignHeight="1700" d:DesignWidth="1180"
             Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Contenido desplazable -->
        </Grid.RowDefinitions>

        <!-- ScrollViewer solo en el contenido principal -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Logo -->
                <StackPanel Orientation="Horizontal" Margin="40 40 0 0">
                    <Image Source="/Imagenes/logo.png" Stretch="Fill" Width="100"/>
                    <TextBlock Foreground="#323748" Text="ECHO" FontSize="50" Margin="30 0 0 0" FontFamily="Segoe UI" VerticalAlignment="Center" FontWeight="Black"/>
                </StackPanel>

                <!-- Contenido General -->
                <StackPanel>
                    <TextBlock Padding="20" Text="Aquí puedes poner tu contenido largo que necesite scroll..." FontSize="18" FontFamily="Segoe UI"/>
