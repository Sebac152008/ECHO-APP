<UserControl x:Class="WPF_ECHO.View.AcercaDeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_ECHO.View"
             mc:Ignorable="d" 
             d:DesignHeight="1500" d:DesignWidth="1180"
             Background="#121212">

    <UserControl.Resources>
        <!-- Estilo general de texto -->
        <Style x:Key="GlassHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0 10 0 5"/>
        </Style>

        <Style x:Key="GlassText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="#D6D6D6"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0 5 0 15"/>
        </Style>

        <!-- Contenedor estilo glassmorphism -->
        <Style x:Key="GlassContainer" TargetType="Grid">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#1AFFFFFF" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="0 0 0 30"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <BlurEffect Radius="4"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Imagen de fondo translúcida -->
        <Image x:Name="FondoImagen"
               Loaded="Image_Loaded"
               Stretch="UniformToFill"
               Opacity="0.15"
               Panel.ZIndex="0" />

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,0"
                      HorizontalScrollBarVisibility="Disabled">

            <StackPanel Margin="100 60 100 40" Orientation="Vertical">

                <!-- Logo -->
                <Image Source="/Imagenes/ECHOLOGO2.png"
                       Width="220"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 40"/>

                <!-- Sección "¿Qué es Echo?" -->
                <Grid Style="{StaticResource GlassContainer}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource GlassHeader}" Text="¿Qué es Echo?" />
                        <TextBlock Style="{StaticResource GlassText}" Text="Echo es una aplicación de recordatorios inspirada en el eco: un sonido que regresa cuando más lo necesitas." />
                    </StackPanel>
                </Grid>

                <!-- Sección "Función" -->
                <Grid Style="{StaticResource GlassContainer}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource GlassHeader}" Text="Función" />
                        <TextBlock Style="{StaticResource GlassText}" Text="Permite registrar y gestionar tus recordatorios fácilmente, asignando fecha y hora para recibir notificaciones." />
                    </StackPanel>
                </Grid>

                <!-- Sección "Objetivo" -->
                <Grid Style="{StaticResource GlassContainer}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource GlassHeader}" Text="Objetivo" />
                        <TextBlock Style="{StaticResource GlassText}" Text="Diseñada para estudiantes, profesionales o cualquier persona que busque organizar su vida diaria de forma moderna y efectiva." />
                    </StackPanel>
                </Grid>

                <!-- Soporte -->
                <Grid Style="{StaticResource GlassContainer}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource GlassHeader}" Text="Soporte" />
                        <TextBlock Style="{StaticResource GlassText}">
                            <Run Text="Correo: "/>
                            <Run Text="Sophymejia@icloud.com" FontWeight="Bold" Foreground="#FFD700"/>
                        </TextBlock>
                        <TextBlock Style="{StaticResource GlassText}">
                            <Run Text="Teléfono: "/>
                            <Run Text="+1 (829)-8799-29202" FontWeight="Bold" Foreground="#FFD700"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>

                <!-- Desarrolladores -->
                <Grid Style="{StaticResource GlassContainer}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource GlassHeader}" Text="Equipo de Desarrollo" />
                        <TextBlock Style="{StaticResource GlassText}" Text="• Mejia Gomez Sophy Marie"/>
                        <TextBlock Style="{StaticResource GlassText}" Text="• Valenzuela De Paula Angel Sebastian"/>
                        <TextBlock Style="{StaticResource GlassText}" Text="• Cueva Santiago Sebastian"/>
                    </StackPanel>
                </Grid>

                <!-- Versión -->
                <Grid Style="{StaticResource GlassContainer}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource GlassHeader}" Text="Versión" />
                        <TextBlock Style="{StaticResource GlassText}" Text="Echo v1.0 – Abril 2025"/>
                    </StackPanel>
                </Grid>

                <!-- Licencia -->
                <Grid Style="{StaticResource GlassContainer}" Margin="0">
                    <StackPanel>
                        <TextBlock Style="{StaticResource GlassHeader}" Text="Licencia" />
                        <TextBlock Style="{StaticResource GlassText}" Text="Este software fue desarrollado como parte de un proyecto académico. Todos los derechos son reservados por los autores. Uso educativo." />
                    </StackPanel>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>