                    <Border Grid.Row="1" Padding="0 30 0 30" BorderThickness="0" Background="#E9E6E6">
                        <StackPanel Margin="40 0 0 0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Orientation="Horizontal">
                            <Image Source="/Imagenes/echoLogo.png" Stretch="Fill" Width="150" Height="50"/>
