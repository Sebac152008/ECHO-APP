<UserControl x:Class="WPF_ECHO.View.AcercaDeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_ECHO.View"
             mc:Ignorable="d" 
             d:DesignHeight="1500" d:DesignWidth="1180"
             Background="White">

    <UserControl.Resources>

        <!-- Estilo claro para tarjetas -->
        <Style x:Key="LightCard" TargetType="Border">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="0 0 0 25"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.15" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Encabezado claro -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
        </Style>

        <!-- Contenido claro -->
        <Style x:Key="SectionText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer Name="MainScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="0,8,0,0"
                      PanningMode="VerticalOnly"
                      Stylus.IsPressAndHoldEnabled="False"
                      IsDeferredScrollingEnabled="True">

            <StackPanel Margin="80 50 80 30" Background="Transparent">

                <!-- Logo -->
                <StackPanel HorizontalAlignment="Center" Margin="0 0 0 40">
                    <Image Source="/Imagenes/echoLogo.png" Width="250" Stretch="Uniform" />
                </StackPanel>

                <!-- Secciones -->
                <Border Style="{StaticResource LightCard}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeader}" Text="¿Qué es Echo?" />
                        <TextBlock Style="{StaticResource SectionText}" FontStyle="Italic"
                                   Text="Echo es una aplicación de recordatorios. Su nombre se inspira en el eco: un sonido que regresa tras rebotar en un obstáculo. Así, los recordatorios que ingresas vuelven a ti cuando más los necesitas." />
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource LightCard}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeader}" Text="Función" />
                        <TextBlock Style="{StaticResource SectionText}" FontStyle="Italic"
                                   Text="Permite registrar y gestionar tus recordatorios fácilmente. Ya sea una tarea, evento o actividad importante, puedes asignarle una fecha y hora específica para recibir una notificación." />
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource LightCard}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeader}" Text="Objetivo" />
                        <TextBlock Style="{StaticResource SectionText}" FontStyle="Italic"
                                   Text="Echo está pensada para cualquier persona que quiera mejorar su organización diaria. Es intuitiva, accesible y útil para estudiantes, profesionales o cualquier usuario común." />
                    </StackPanel>
                </Border>
                
                <!-- Apartado de los desarrolladores -->
                
                <Separator Margin="0 30" Background="#D1D5DB" Height="1"/>

                <Border Style="{StaticResource LightCard}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeader}" Text="Soporte" Margin="0 0 0 10"/>
                          <TextBlock Style="{StaticResource SectionText}">
                            <Run Text="Correo: "/>
                            <Run Text="Sophymejia@icluod.com" FontWeight="Bold"/>
                          </TextBlock>
                          <TextBlock Style="{StaticResource SectionText}">
                            <Run Text="Teléfono: "/>
                            <Run Text="+1 (829)-8799-29202" FontWeight="Bold"/>
                       </TextBlock>
                    </StackPanel>
                </Border>


                <!-- Desarrolladores -->
                
                <Border Style="{StaticResource LightCard}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeader}" Text="Equipo de Desarrollo" Margin="0 0 0 15"/>
                        <TextBlock Style="{StaticResource SectionText}" Text="• Mejia Gomez Sophy Marie"/>
                        <TextBlock Style="{StaticResource SectionText}" Text="• Valenzuela De Paula Angel Sebastian"/>
                        <TextBlock Style="{StaticResource SectionText}" Text="• Cueva Santiago Sebastian"/>
                    </StackPanel>
                </Border>
                
                <!-- Version -->

                <Border Style="{StaticResource LightCard}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeader}" Text="Versión"/>
                        <TextBlock Style="{StaticResource SectionText}" Text="Echo v1.0 – Abril 2025"/>
                    </StackPanel>
                </Border>
                
                <!-- Licencia -->

                <Border Style="{StaticResource LightCard}" Margin="0">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeader}" Text="Licencia"/>
                        <TextBlock Style="{StaticResource SectionText}" FontStyle="Italic"
                                   Text="Este software fue desarrollado como parte de un proyecto académico. Todos los derechos son reservados por los autores. Uso educativo." />
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
